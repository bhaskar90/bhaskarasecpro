<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vC_mpl_package"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/img4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|start|bottom"
                android:textAllCaps="false"
                android:text="Mumbai"
                android:id="@+id/vT_msl_radiostnname"
                android:textSize="14sp"
                android:textColor="@color/black_color"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start|bottom"
                    android:textColor="@color/signupcolor"
                    android:textSize="16sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:textAllCaps="true"
                    android:text="inr"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|end|bottom"
                    android:textColor="@color/signupcolor"
                    android:id="@+id/vT_msl_campaignfinalvalue"
                    android:textSize="16sp"
                    android:layout_marginEnd="20dp"
                    android:textAllCaps="true"
                    android:text="0" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="start|top"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/medium_gray"
                    android:id="@+id/vT_msl_stn"
                    android:gravity="center|start"
                    android:text=""/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/vT_msl_totalcount"
                    android:textColor="@color/black_color"
                    android:layout_marginStart="0dp"
                    android:text=""
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/vI_msl_delete"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/round_bgcolor"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/vI_msl_edit"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/bacg"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>



